include notloggedin.pug
div(id="register" class="forms")
    h2 Register
    form(method="post" action="/register")
        div(class="form-group")
            label(for="name") Username
            input(type="name" class="form-control" id="username" placeholder="Username" name="username")
        div(class="form-group")
            label(for="emailaddress") Email Address
            input(type="email" class="form-control" id="emailAddress" placeholder="Email" name="email")
        div(class="form-group")
            label(for="password") Password
            input(type="password" class="form-control" id="password" placeholder="Password" name="password")
        button(type="submit" class="btn btn-default") Submit   