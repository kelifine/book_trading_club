include loggedin.pug
div(class="forms") 
    h2 Update Profile
    p(class="alert") #{locals.location}
    form(method='post' action="/location" id="location")
        div(class="form-group")
            label(for="city") City
            input(type="city" class="form-control" id="city" placeholder="City" name="city")
        div(class="form-group")
            label(for="state") State
            input(type="state" class="form-control" id="state" placeholder="State" name="state")
        button(type="submit" class="btn btn-default") Submit
div(id="password" class="forms")        
    h2 Update Password
    p(class="alert") #{locals.alert}
    form(method='post' action="/password" id="changepassword")
        div(class="form-group")
            label(for="oldpassword") Old Password
            input(type="password" class="form-control" id="oldpassword" placeholder="Old Password" name="oldpassword")
        div(class="form-group")
            label(for="newpassword") New Password
            input(type="password" class="form-control" id="newPassword" placeholder="New Password" name="newpassword")
        div(class="form-group")
            label(for="confirmnewpassword") Confirm New Password
            input(type="password" class="form-control" id="confirmNewPassword" placeholder="Confirm New Password" name="confirmnewpassword")    
        button(type="submit" class="btn btn-default" id="submitPassword") Submit   
script.
    if ($(".alert").val()==='') {
        $(".alert").style('display', 'none');
    };